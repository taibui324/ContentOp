# Application
APP_NAME=RankPot API
DEBUG=False
LOG_LEVEL=INFO

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/rankpot

# Redis (Upstash)
REDIS_URL=redis://default:password@host:6379

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# External APIs
RAPIDAPI_KEY=your-rapidapi-key
RAPIDAPI_TIKTOK_HOST=tiktok-scraper7.p.rapidapi.com
RAPIDAPI_INSTAGRAM_HOST=instagram-scraper-api2.p.rapidapi.com
OPENAI_API_KEY=your-openai-api-key

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Email (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@rankpot.com
